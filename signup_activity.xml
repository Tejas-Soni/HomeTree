<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/firstname"
        android:id="@+id/first_name"
        android:padding="@dimen/twenty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/lastname"
        android:id="@+id/lastname"
        android:padding="@dimen/twenty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/first_name"
         />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mobile number"
        android:padding="@dimen/twenty"
        android:inputType="phone"
        android:id="@+id/mobileno"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastname"/>
    <EditText
        android:layout_width="0dp"
        android:id="@+id/emailid"
        android:padding="@dimen/twenty"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mobileno"
        android:hint="@string/enteremail"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="@dimen/twenty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailid"
        android:id="@+id/password"
        android:hint="@string/enter_password"/>
    <EditText
        android:layout_width="0dp"
        android:padding="@dimen/twenty"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:id="@+id/confirm_password"
        android:hint="@string/confirm_password"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_button"
        android:src="@mipmap/date_picker"
        app:layout_constraintTop_toBottomOf="@id/confirm_password"
        app:layout_constraintLeft_toLeftOf="parent"
         />
    <EditText
        android:layout_width="0dp"
        android:id="@+id/enterbirthdate"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirm_password"
        android:inputType="date"
        android:hint="@string/enter_bith_date_here"
        android:padding="@dimen/twenty"
        app:layout_constraintLeft_toRightOf="@+id/date_button"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:padding="@dimen/twenty"
        android:id="@+id/submit_button"
        app:layout_constraintTop_toBottomOf="@id/enterbirthdate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.736" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/submit_button"
        app:layout_constraintTop_toBottomOf="@id/enterbirthdate"
        android:text="Reset"
        android:padding="@dimen/twenty"
        android:layout_marginRight="53dp" />
</android.support.constraint.ConstraintLayout>
</ScrollView>